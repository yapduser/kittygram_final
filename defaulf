# Nginx default

server {
    server_name my.sytes.net;

    location / {
        proxy_pass http://127.0.0.1:8000;
    }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/my.sytes.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/my.sytes.net/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    if ($host = my.sytes.net) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    return 404;
    server_name my.sytes.net;
}

server {
    server_name  sytes.sytes.net;

    location / {
        proxy_pass http://127.0.0.1:9000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/sytes.sytes.net/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/sytes.sytes.net/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}

server {
    if ($host = sytes.sytes.net) {
        return 301 https://$host$request_uri;
    }

    listen 80;
    return 404;
    server_name sytes.sytes.net;
}
